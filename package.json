{
  "name": "poly-agent",
  "version": "2.0.0",
  "description": "MCP server + cron notifications for Hospedaje Poly",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev:mcp": "tsx --env-file=.env src/mcp/index.ts",
    "dev:cron": "tsx --env-file=.env src/cron/index.ts",
    "start:mcp": "node --env-file=.env dist/mcp/index.js",
    "start:cron": "node --env-file=.env dist/cron/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@whiskeysockets/baileys": "^6.7.16",
    "better-sqlite3": "^11.7.0",
    "node-cron": "^3.0.3",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.0",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
